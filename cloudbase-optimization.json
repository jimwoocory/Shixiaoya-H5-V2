{
  "performance": {
    "functions": {
      "shixiaoya-api": {
        "memorySize": 512,
        "timeout": 60,
        "concurrency": 100,
        "environment": {
          "NODE_ENV": "production",
          "NODE_OPTIONS": "--max-old-space-size=512"
        }
      }
    },
    "hosting": {
      "cache": {
        "maxAge": 31536000,
        "rules": [
          {
            "path": "/static/**",
            "maxAge": 31536000
          },
          {
            "path": "/assets/**", 
            "maxAge": 31536000
          },
          {
            "path": "/*.js",
            "maxAge": 86400
          },
          {
            "path": "/*.css",
            "maxAge": 86400
          },
          {
            "path": "/api/**",
            "maxAge": 0
          }
        ]
      },
      "compression": true,
      "headers": {
        "X-Frame-Options": "DENY",
        "X-Content-Type-Options": "nosniff",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    "database": {
      "indexes": [
        {
          "collection": "products",
          "fields": [
            { "field": "categoryId", "order": 1 },
            { "field": "isActive", "order": 1 },
            { "field": "sort", "order": 1 }
          ]
        },
        {
          "collection": "inquiries",
          "fields": [
            { "field": "status", "order": 1 },
            { "field": "createdAt", "order": -1 }
          ]
        },
        {
          "collection": "cases",
          "fields": [
            { "field": "isActive", "order": 1 },
            { "field": "sort", "order": 1 }
          ]
        }
      ]
    }
  },
  "monitoring": {
    "alerts": [
      {
        "name": "函数执行时间过长",
        "condition": "function_duration > 30000",
        "action": "email"
      },
      {
        "name": "数据库连接数过高",
        "condition": "db_connections > 80",
        "action": "sms"
      }
    ]
  },
  "security": {
    "cors": {
      "origin": ["https://your-domain.com"],
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedHeaders": ["Content-Type", "Authorization"]
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 100
    }
  }
}